# MongoDB Connection URI (Replace <username>, <password>, and cluster details with your own)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/StayEase?retryWrites=true&w=majority

# Port on which the server will run
PORT=5000

# Session secret key for cookie/session authentication
SESSION_SECRET_KEY=your-session-secret

# Cloudinary configuration for image uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Node Environment (development | production)
NODE_ENV=development
