<% layout("/layouts/boilerplate") %>

<title>All Listings | StayEase</title>

<style>
#filters{
    display: flex;
    flex-wrap: wrap;
}

.filter{
    text-align: center;
    opacity: 0.7;
}

.filter:hover{
    opacity: 1;
    cursor:pointer;
}
.filter p{
    font-size: 0.8rem;
}

</style>

<div class="container my-5">
    <div id="filters" class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <a href="/listings" class="filter">
            <div><i class="fa-solid fa-border-all"></i></div>
            <p>All</p>
        </a>
        <a href="/listings?category=trending" class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </a>
        <a href="/listings?category=rooms" class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>
        <a href="/listings?category=waterfront" class="filter">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Waterfront</p>
        </a>
        <a href="/listings?category=mountains" class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </a>
        <a href="/listings?category=castles" class="filter">
            <div><i class="fa-solid fa-chess-rook"></i></div>
            <p>Castles</p>
        </a>
        <a href="/listings?category=pools" class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Pools</p>
        </a>
        <a href="/listings?category=camping" class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </a>
        <a href="/listings?category=beach" class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </a>
        <a href="/listings?category=arctic" class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
    </div>    
    
    <div class="listings-grid">
        <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing.id %>" class="listing-card">
                <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="listing-image">
                <h5 class="listing-title"><%= listing.title %></h5>
                <p class="listing-price">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
                <p class="listing-location"><%= listing.location %></p>
            </a>
        <% } %>
    </div>
</div>

