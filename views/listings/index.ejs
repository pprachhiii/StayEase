<% layout("/layouts/boilerplate") %>

<title>All Listings | StayEase</title>
</head>
<body>
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="page-title">All Listings</h3>
            <a href="/listings/new" class="btn create-btn">Create New</a>
        </div>

        <div class="listings-grid">
            <% for (let listing of allListings) { %>
                <a href="/listings/<%= listing.id %>" class="listing-card">
                    <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="listing-image">
                    <h5 class="listing-title"><%= listing.title %></h5>
                    <p class="listing-price">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
                    <p class="listing-location"><%= listing.location %></p>
                </a>
            <% } %>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
    